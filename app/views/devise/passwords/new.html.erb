<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-signin', method: :post}) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="form-signin-heading text-center">Forgot your password?</h2>

    <%= f.label :email, class: 'sr-only' %><br/>
    <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', class: 'form-control' %><br/>

    <div class="actions">
      <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary btn-block' %>
    </div><br/>
    <%= render 'devise/shared/links' %>
<% end %>


