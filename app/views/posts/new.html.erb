<div class="col-sm-8 blog-main">
  <div class="section-header">
    <h1> Create Post</h1>
  </div>

  <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: 'Enter title', class: 'form-control', max: 50 %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, placeholder: 'Enter content', class: 'form-control', max: 250 %>
      </div>
      <div class="form-group">
        <%= f.label :author_id %>
        <%= f.collection_select(:author_id, Author.all, :id, :name, {:prompt => 'Please select the author of this post'}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>