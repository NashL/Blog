<div class="col-sm-8 blog-main">
  <div class="section-header">
    <h1> Edit Post</h1>
  </div>
  <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: 'Enter title', class: 'form-control', maxlength: 50, required: true  %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, placeholder: 'Enter content', class: 'form-control', maxlength: 250, rows: 5, required: true %>
      </div>
      <div class="form-group">
        <%= f.label :slug %>
        <%= f.text_field :slug, placeholder: 'Enter slug', class: 'form-control', maxlength: 30, required: true %>
      </div>
      <div class="form-group">
        <%= f.label :author_id %>
        <%= f.collection_select(:author_id, Author.all, :id, :name, {:prompt => 'Please select the author of this post'}, {class: 'form-control', required: true}) %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>