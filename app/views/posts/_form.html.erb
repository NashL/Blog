<div class="blog-header">
  <h1 class=""> <%= section_title %></h1>
</div>
<%= form_for @post do |f| %>
    <% @post.errors.full_messages.each do |message| %>
        <div class="alert-danger">
          * <%= message %>
        </div>

    <% end %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'Enter title', class: 'form-control', maxlength: 50, required: true %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, placeholder: 'Enter content', class: 'form-control', maxlength: 250, rows: 5, required: true %>
    </div>
    <div class="form-group">
      <%= f.label :slug %>
      <%= f.text_field :slug, placeholder: 'Enter slug', class: 'form-control', maxlength: 30, required: true %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
<% end %>