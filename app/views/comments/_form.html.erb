<h4> Leave a Comment</h4>
<%= form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', required: true, placeholder: 'Name' %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 5, required: true, placeholder: 'Write a Comment' %>
  </div>
    <%= f.submit class: 'btn btn-primary btn-sm', id:'submit_comment' %>
<% end %>
